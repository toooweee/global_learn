{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@prisma": ["src/prisma"],
      "@prisma/*": ["src/prisma/*"],
      "@users": ["src/users"],
      "@users/*": ["src/users/*"],
      "@auth": ["src/auth"],
      "@auth/*": ["src/auth/*"],
      "@tokens": ["src/tokens"],
      "@tokens/*": ["src/tokens/*"],
      "@mail": ["src/mail"],
      "@mail/*": ["src/mail/*"],
      "@providers": ["src/providers"],
      "@providers/*": ["src/providers/*"]
    }
  }
}
