{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@common": [
        "libs/common/src"
      ],
      "@common/*": [
        "libs/common/src/*"
      ],
      "@mail": [
        "src/mail"
      ],
      "@mail/*": [
        "src/mail/*"
      ],
      "@prisma": [
        "src/prisma"
      ],
      "@prisma/*": [
        "src/prisma/*"
      ],
      "@providers": [
        "src/providers"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@tokens": [
        "src/tokens"
      ],
      "@tokens/*": [
        "src/tokens/*"
      ],
      "@trpc": [
        "src/trpc"
      ],
      "@trpc/*": [
        "src/trpc/*"
      ]
    }
  }
}